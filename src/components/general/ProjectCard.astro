---
import { IProjectDetails } from "@types";
const { projectDetail } = Astro.props as IProjectDetails;
const { title, description, technologies, thumbnail, liveUrl, githubUrl } =
	projectDetail;
---

<article class="w-full overflow-hidden relative group dark:text-light">
	<a href={liveUrl ? liveUrl : githubUrl} target="_blank">
		<img
			src={thumbnail}
			class="rounded-md w-full h-auto scale-100 hover:scale-105 transition duration-[0.5s]"
			loading="lazy"
			width="100%"
			height="100%"
			alt="featureImage"
		/>
	</a>

	<div class="my-4">
		<h2 class="my-4">{title}</h2>
		<p class="my-4 dark:text-gray">{description}</p>
		<div class="text-[#6CACE4] flex-row space-x-3">
			{technologies.map((tech) => <span>{tech}</span>)}
		</div>
	</div>

	<div class="flex justify-start gap-x-4">
		{
			liveUrl && (
				<div class="p-[3px] rounded-[4px] bg-gradient-to-r from-[#9358F7] via-[#4A9FEB] to-[#10D7E2]">
					<div class="p-3 bg-white dark:bg-black">
						<a
							class="flex gap-x-2 dark:text-white cursor-pointer"
							href={liveUrl}
							aria-label="Link"
							target="_blank"
						>
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="20"
								height="20"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
								class="feather feather-link-2 mt-1"
							>
								<path d="M15 7h3a5 5 0 0 1 5 5 5 5 0 0 1-5 5h-3m-6 0H6a5 5 0 0 1-5-5 5 5 0 0 1 5-5h3" />
								<line x1="8" y1="12" x2="16" y2="12" />
							</svg>
							Live Demo
						</a>
					</div>
				</div>
			)
		}
		{
			githubUrl && (
				<a
					href={githubUrl}
					class="p-3 dark:text-white"
					aria-label="Social Media"
					target="_blank"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="32"
						height="32"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="feather feather-github"
					>
						<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
					</svg>
				</a>
			)
		}
	</div>
</article>
